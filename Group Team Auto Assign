game.Players.CharacterAutoLoads = false

game.Players.PlayerAdded:connect(function(Player)

	--[[Team Assign ]]--
	Player.Neutral = false

	if Player:IsInGroup(group ID here) then
		Player.TeamColor = BrickColor.new("Black")			-- Group
	elseif Player:IsInGroup(0) then
		Player.TeamColor = BrickColor.new("Bright blue")	-- Allies
	elseif Player:IsInGroup(0) then 				
		Player.TeamColor = BrickColor.new("Bright blue")		-- Allies
	else
		Player.TeamColor = BrickColor.new("Bright red")	-- Raiders
	end
	Player.CharacterAdded:connect(function(Character)
		repeat wait() until Character:findFirstChild("Humanoid")
		Character.Humanoid.Died:connect(function()
			wait(3)
			Player:LoadCharacter()
		end)
	end)

	Player:LoadCharacter()
end)
